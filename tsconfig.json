  "compilerOptions": {
    "jsx": "react",
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["playground", "node_modules"]
}
